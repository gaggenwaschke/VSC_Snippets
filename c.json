    "hpp file structure": {
		"prefix": "hppfile",
		"body": [
			"/**",
            " * @file $TM_FILENAME",
            " * @author Joshua Lauterbach (joshua@aconno.de)",
            " * @brief $1",
            " * @version $2",
            " * @date $CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE",
            " * ",
            " * @copyright aconno GmbH (c) $CURRENT_YEAR",
            " * ",
            " */",
            "",
            "#ifndef __${TM_FILENAME/([^\\.]*)(\\.)*/${1:/upcase}${2:+_}/g}__",
            "#define __${TM_FILENAME/([^\\.]*)(\\.)*/${1:/upcase}${2:+_}/g}__",
            "",
            "//-------------------------------- PROTOTYPES ---------------------------------",
            "",
            "namespace $3",
            "{",
            "class $4;",
            "}",
            "",
            "//--------------------------------- INCLUDES ----------------------------------",
            "",
            "",
            "namespace $3",
            "{",
            "//-------------------------------- CONSTANTS ----------------------------------",
            "",
			"//---------------------------- CLASS DEFINITION -------------------------------",
            "",
            "/**",
            " * @brief $1",
            " */",
			"class $4 : $5",
            "{",
            "    // delete default constructors",
            "    $4() = delete;",
            "    $4(const $4& other) = delete;",
            "    $4& operator=(const $4& other) = delete;",
            "public:",
            "    $0",
            "};",
            "} // $3",
            "#endif //__${TM_FILENAME/([^\\.]*)(\\.)*/${1:/upcase}${2:+_}/g}__",
        ],
        "description": "Basic file structure"
    },
    "test header file structure": {
		"prefix": "testhpp",
		"body": [
			"/**",
            " * @file $TM_FILENAME",
            " * @author Joshua Lauterbach (joshua@aconno.de)",
            " * @brief $1",
            " * @version $2",
            " * @date $CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE",
            " * ",
            " * @copyright aconno GmbH (c) $CURRENT_YEAR",
            " * ",
            " */",
            "",
            "#ifndef __${TM_FILENAME/([^\\.]*)(\\.)*/${1:/upcase}${2:+_}/g}__",
            "#define __${TM_FILENAME/([^\\.]*)(\\.)*/${1:/upcase}${2:+_}/g}__",
            "",
            "//-------------------------------- PROTOTYPES ---------------------------------",
            "",
            "namespace Test",
            "{",
            "class $4;",
            "}",
            "",
            "//--------------------------------- INCLUDES ----------------------------------",
            "",
            "#include \"TestBase.h\"",
            "",
            "namespace Test",
            "{",
            "//-------------------------------- CONSTANTS ----------------------------------",
            "",
			"//---------------------------- CLASS DEFINITION -------------------------------",
            "",
            "/**",
            " * @brief $1",
            " */",
			"class $4 : public Test::Base",
            "{",
            "",
            "// constructors",
            "public:",
            "   // delete default constructors",
            "   $4(const $4& other) = delete;",
            "   $4& operator=(const $4& other) = delete;",
            "",
            "   /**",
            "    * @brief get singleton instance",
            "    */",
            "   static $4 &getInstance();",
            "",
            "private:",
            "   $4();",
            "   $0",
            "   virtual void runInternal() final;",
            "",
            "   /** singleton instance */",
            "   static $4 instance;",
            "};",
            "} // Test",
            "#endif //__${TM_FILENAME/([^\\.]*)(\\.)*/${1:/upcase}${2:+_}/g}__",
        ],
        "description": "Test header structure"
    },

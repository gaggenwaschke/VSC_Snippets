    "ESP error check": {
      "prefix": "espcheckerror",
      "body": [
              "$1 = $2",
              "if ($1 != ESP_OK)",
              "{",
              "   ESP_LOGE(TAG, \"$3\");",
              "   return $1;",
              "}",
              "$0",
          ],
      "description": "runs a function that returns esp_err_t and checks for error"
    },
    "ESP wanring check": {
      "prefix": "espcheckwarning",
      "body": [
              "if ($1 != ESP_OK) ESP_LOGW(TAG, \"$1 failed\");",
              "$0",
          ],
      "description": "runs a function that returns esp_err_t and checks for error"
    },
    "ESP restart on error": {
      "prefix": "esprestarterror",
      "body": [
              "if ($1 != ESP_OK) esp_restart();",
              "$0",
          ],
      "description": "checks for an error and restarts if one occurs"
    },
